<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.buzzard.db.models.UserTable" table="usertable">
		
		<id column="id" name="id" type="long">
			<generator class="increment"/>
		</id>
		
		<property column="user_id" name="userID" type="long"/>
		<property column="user_name" name="userName" type="java.lang.String"/>
		<property column="user_password" name="userPassword" type="java.lang.String"/>
		<property column="permissions" name="permissions" type="java.lang.Integer"/>
		
	</class>
</hibernate-mapping>

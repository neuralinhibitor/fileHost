      	<xsd:complexType>
      		<xsd:sequence>


      			<xsd:element name="credentials"
      				type="tns:AuthenticationCredentials" maxOccurs="1"
      				minOccurs="1">
      			</xsd:element>
      		</xsd:sequence>
      	</xsd:complexType>
      </xsd:element>
      <xsd:element name="getFileListResponse">
      	<xsd:complexType>
      		<xsd:sequence>

      			<xsd:element name="files" type="tns:File"
      				maxOccurs="unbounded" minOccurs="0">
      			</xsd:element>
      		</xsd:sequence>
      	</xsd:complexType>
      </xsd:element>
    
